// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "file_scan_exclusions": [
    "node_modules"
  ],
  "languages": {
    "TSX": {
      "format_on_save": "on"
    },
    "TypeScript": {
      "format_on_save": "on"
    },
    "JSX": {
      "format_on_save": "on"
    },
    "JavaScript": {
      "format_on_save": "on"
    },
    "Rust": {
      "format_on_save": "on"
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "theme": "One Dark",
  "remove_trailing_whitespace_on_save": true,
  "project_panel": {
    "dock": "left"
  },
  "base_keymap": "VSCode",
  "vim_mode": true,
  "format_on_save": "off",
  "scrollbar": {
    "show": "system",
    "git_diff": true
  },
  "assistant": {
    "button": false,
    "version": "2"
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": true
  },
  "ui_font_size": 14,
  "buffer_font_size": 12,
  "ui_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_family": "JetBrainsMonoNL Nerd Font",
  "buffer_line_height": "comfortable",
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "show_whitespaces": "selection",
  "gutter": {
    "code_actions": true
  }
}
